programa {
  funcao inicio() {
   inteiro i, a, soma=0, media=0
    para ( i=1; i<=5; i++){
      escreva ("\nDigite um numero ", i, ": ")
      leia (a)
      soma= a+soma
      media= soma/5

    }
    escreva ("\nA soma dos numeros digitados foi de: ",soma)
    escreva ("\nA media dos numeros digitados foi de: " ,media)
    }
   }
